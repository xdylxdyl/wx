<?xml version="1.0" encoding="UTF-8"?>
<taglib>
    <!-- The version number of this tag library -->
    <tlibversion>1.0</tlibversion>

    <!-- The JSP specification version required to function -->
    <jspversion>2.1</jspversion>

    <!-- The short name of this tag library -->
    <shortname>mobile</shortname>

    <!-- Public URI that uniquely identifies this version of the tag library -->
    <uri>http://www.gemantic.com/taglibs/mobile</uri>

    <!-- General information about this tag library -->
    <info>
          replace mobile 3-7 digit to *
    </info>
    
    <tag>
        <name>mobile</name>
        <tag-class>com.gemantic.commons.string.tags.MobileFormat</tag-class>
        <body-content>JSP</body-content>
        <attribute>
            <name>value</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>        
    </tag>
    
</taglib>